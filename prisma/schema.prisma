// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?   // Add this field for OAuth profile images
  role          UserRole  @default(INVESTOR)
  kycStatus     KYCStatus @default(PENDING)
  kycData       Json?
  emailVerified DateTime? // Add this field for NextAuth compatibility
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  channels      Channel[]
  investments   Investment[]
  transactions  Transaction[]
  wallet        Wallet?
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Channel {
  id                String        @id @default(cuid())
  youtubeChannelId  String        @unique
  channelName       String
  channelUrl        String
  ownerId           String
  verified          Boolean       @default(false)
  analytics         Json?
  revenueData       Json?
  status            ChannelStatus @default(PENDING)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  owner             User          @relation(fields: [ownerId], references: [id])
  offerings         Offering[]
  
  @@map("channels")
}

model Offering {
  id              String         @id @default(cuid())
  channelId       String
  title           String
  description     String
  sharePercentage Float
  totalShares     Int
  availableShares Int
  pricePerShare   Float
  minInvestment   Float
  maxInvestment   Float?
  duration        Int            // months
  status          OfferingStatus @default(DRAFT)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  // Relations
  channel         Channel        @relation(fields: [channelId], references: [id])
  investments     Investment[]
  
  @@map("offerings")
}

model Investment {
  id          String    @id @default(cuid())
  investorId  String
  offeringId  String
  shares      Int
  totalAmount Float
  status      InvestmentStatus @default(PENDING)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  investor    User      @relation(fields: [investorId], references: [id])
  offering    Offering  @relation(fields: [offeringId], references: [id])
  payouts     Payout[]
  
  @@map("investments")
}

model Payout {
  id           String    @id @default(cuid())
  investmentId String
  amount       Float
  revenueMonth String    // YYYY-MM format
  status       PayoutStatus @default(PENDING)
  createdAt    DateTime  @default(now())
  paidAt       DateTime?
  
  // Relations
  investment   Investment @relation(fields: [investmentId], references: [id])
  
  @@map("payouts")
}

model Transaction {
  id              String            @id @default(cuid())
  userId          String
  type            TransactionType
  amount          Float
  fee             Float             @default(0)
  netAmount       Float?            // amount after fees
  status          TransactionStatus @default(PENDING)
  stripeId        String?
  referenceType   String?           // "offering", "investment", "withdrawal", etc.
  referenceId     String?           // ID of the related entity
  description     String?
  metadata        Json?
  ipAddress       String?           // For compliance/audit
  userAgent       String?           // For compliance/audit
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  completedAt     DateTime?
  
  // Relations
  user            User              @relation(fields: [userId], references: [id])
  ledgerEntries   WalletLedger[]
  
  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

model Wallet {
  id              String   @id @default(cuid())
  userId          String   @unique
  balance         Float    @default(0)
  pendingBalance  Float    @default(0)  // Funds in processing
  lockedBalance   Float    @default(0)  // Funds locked for pending investments
  totalDeposited  Float    @default(0)
  totalInvested   Float    @default(0)
  totalWithdrawn  Float    @default(0)
  totalEarnings   Float    @default(0)  // Revenue from investments
  currency        String   @default("USD")
  isActive        Boolean  @default(true)
  lastActivityAt  DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccounts    BankAccount[]
  walletLedger    WalletLedger[]
  
  @@map("wallets")
}

model BankAccount {
  id                  String            @id @default(cuid())
  walletId            String
  userId              String
  accountHolderName   String
  accountType         BankAccountType   @default(CHECKING)
  bankName            String
  routingNumber       String            // Encrypted in production
  accountNumberLast4  String            // Only store last 4 digits
  accountNumberHash   String            // Hashed full account number for verification
  stripeExternalId    String?           // Stripe connected account external ID
  isVerified          Boolean           @default(false)
  isDefault           Boolean           @default(false)
  status              BankAccountStatus @default(PENDING)
  verifiedAt          DateTime?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  
  // Relations
  wallet              Wallet            @relation(fields: [walletId], references: [id], onDelete: Cascade)
  withdrawals         Withdrawal[]
  
  @@index([userId])
  @@index([walletId])
  @@map("bank_accounts")
}

model Withdrawal {
  id              String           @id @default(cuid())
  userId          String
  bankAccountId   String
  amount          Float
  fee             Float            @default(0)
  netAmount       Float            // amount - fee
  status          WithdrawalStatus @default(PENDING)
  stripePayoutId  String?
  failureReason   String?
  requestedAt     DateTime         @default(now())
  processedAt     DateTime?
  completedAt     DateTime?
  
  // Relations
  bankAccount     BankAccount      @relation(fields: [bankAccountId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@map("withdrawals")
}

model WalletLedger {
  id              String          @id @default(cuid())
  walletId        String
  transactionId   String?
  entryType       LedgerEntryType
  debit           Float           @default(0)
  credit          Float           @default(0)
  balance         Float           // Running balance after this entry
  description     String
  referenceType   String?         // "investment", "withdrawal", "deposit", "payout"
  referenceId     String?         // ID of the related entity
  metadata        Json?
  createdAt       DateTime        @default(now())
  
  // Relations
  wallet          Wallet          @relation(fields: [walletId], references: [id], onDelete: Cascade)
  transaction     Transaction?    @relation(fields: [transactionId], references: [id])
  
  @@index([walletId])
  @@index([createdAt])
  @@index([entryType])
  @@map("wallet_ledger")
}

// Enums
enum UserRole {
  CREATOR
  INVESTOR
  ADMIN
}

enum KYCStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum ChannelStatus {
  PENDING
  VERIFIED
  SUSPENDED
  REJECTED
}

enum OfferingStatus {
  DRAFT
  PENDING_APPROVAL
  ACTIVE
  FUNDED
  CLOSED
  SUSPENDED
}

enum InvestmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum TransactionType {
  INVESTMENT
  PAYOUT
  REFUND
  FEE
  DEPOSIT
  WITHDRAWAL
  EARNING
  TRANSFER
}

enum BankAccountType {
  CHECKING
  SAVINGS
}

enum BankAccountStatus {
  PENDING
  VERIFIED
  FAILED
  SUSPENDED
}

enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum LedgerEntryType {
  DEPOSIT
  WITHDRAWAL
  INVESTMENT
  INVESTMENT_RETURN
  PAYOUT_RECEIVED
  FEE_CHARGED
  REFUND
  ADJUSTMENT
  LOCK
  UNLOCK
}